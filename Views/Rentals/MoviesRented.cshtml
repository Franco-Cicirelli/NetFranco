@model dynamic
@{
    ViewBag.Title = "MoviesRented";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Movies Rented</h2>

<table id="rentals" class="table table-bordered table-hover">
    <thead>
    <th>Customer</th>
    <th>Movie</th>
    <th>Date Rented</th>
    </thead>
    <tbody>
    </tbody>
</table>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval");
    <script>
        $(document).ready(function () {


            // Table

            var table = $("#rentals").DataTable({
                ajax: {
                    url: "/api/newRentals",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "customer.name",

                    },
                    {
                        data: "movie.name"
                    },
                    {
                        data: "dateRented"
                    }
                ]
            });
        });
    </script>
}